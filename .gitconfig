[gui]

[color]
	ui = auto
[merge]
	tool = mymeld
	conflictstyle = diff3
[mergetool "mymeld_plain"]
	cmd = meld --diff $LOCAL $MERGED $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE
[mergetool "mymeld"]
	cmd = meld $LOCAL $BASE $REMOTE -o $MERGED --diff $BASE $LOCAL --diff $BASE $REMOTE --auto-merge
[diff]
	tool = meld
[diff "meld"]
	command = meld
[core]
	excludesfile = /home/toromano/.config/git/ignore
	editor = vim
#	gitproxy = /tmp/git-proxy

[include]
	path = ~/.config/git/aliases
	path = ~/.config/git/localdefs

[push]
	default = simple
[credential]
	helper = cache --timeout=3600
[rebase]
	autosquash = true
[rerere]
	enabled = true
[help]
	autocorrect = 15
[pull]
	rebase = true
